# Backend runtime
PORT=8000

# Comma-separated list of allowed origins for CORS.
# Example for Vercel + local:
# BACKEND_CORS_ORIGINS=https://your-vercel-app.vercel.app,http://localhost:3000
BACKEND_CORS_ORIGINS=*

# Database backend:
# - sqlite  (default, local dev)
# - postgres (Supabase Postgres via DATABASE_URL)
DB_BACKEND=sqlite

# SQLite path (used when DB_BACKEND=sqlite)
SQLITE_PATH=data/sales_dashboard.db

# Supabase/Postgres connection (used when DB_BACKEND=postgres)
# Example:
# DATABASE_URL=postgresql://postgres:password@db.<project-ref>.supabase.co:5432/postgres?sslmode=require
DATABASE_URL=

# Optional raw file cloud storage (Phase E).
# If these are set, uploaded raw files are written to Supabase Storage;
# otherwise backend falls back to local RAW_UPLOAD_DIR.
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_STORAGE_BUCKET=raw-uploads
SUPABASE_STORAGE_PREFIX=iqbar
RAW_UPLOAD_DIR=data/raw_uploads

# Clerk auth (Phase C)
CLERK_ISSUER=https://your-subdomain.clerk.accounts.dev
# Optional; leave blank if not configured in Clerk JWT settings.
CLERK_AUDIENCE=
# Optional for future Clerk management APIs (not required for JWT verification).
CLERK_SECRET_KEY=sk_test_xxx

# Optional explicit admin overrides (comma-separated).
# Use Clerk user IDs from dashboard (e.g. user_abc123) and/or trusted emails.
ADMIN_USER_IDS=
ADMIN_EMAILS=

# Optional runtime tuning.
LOG_LEVEL=INFO
DASHBOARD_CACHE_TTL_SECONDS=30
